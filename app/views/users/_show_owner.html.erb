<div class="w-full bg-ncs-tweed bg-ncs-gray-700 rounded text-white overflow-clip">
  <div class="flex gap-4">
    <div class="flex flex-col gap-2 bg-ncs-grid basis-2/5">
      <div
        class="flex items-center flex-wrap bg-ncs-gray-400 px-2 py-1
        bg-gradient-to-b from-ncs-gray-200"
      >
        <h1 class="text-2xl mr-2"><%= user.display_name %></h1>
        <span class="text-2xl text-gray-500"><%= user.name %></span>
      </div>
      <%= render partial: "skins/skin_3d_new", locals: { data: user.featured_skin_data } %>
    </div>
    <div class="flex flex-col gap-2 p-4 grow">
      <div class="bg-ncs-gray-300 rounded p-4 w-full">
        <h2 class="text-xl text-gray-500">Biography</h2>
        <% if user.biography.present? %>
          <%= simple_format user.biography %>
        <% else %>
          <p>A Miner in Need of Cooler Shoes...</p>
        <% end %>
      </div>
      <div>
        <%= link_to "Edit Profile", "", class: "btn-ncs btn-ncs-disabled" %>
        <%= link_to "View My Skins", gallery_path(user: current_user.name), class: "btn-ncs" %>
      </div>
    </div>
  </div>
</div>