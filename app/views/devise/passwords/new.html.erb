<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h2 class="text-4xl text-center">Reset Password</h2>
  <div class="flex flex-col gap-2">
    <div class="flex flex-col">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black" %>
    </div>

    <div class="actions">
      <%= f.submit "Send reset password instructions", class: "btn-ncs" %>
    </div>
  </div>
<% end %>

<h4 class="mt-2">Please Note:</h4>
<p class="text-sm">
  This is a fan-made restoration of NeedCoolShoes.
</p>
<p class="text-sm">
  If you made an account on the old site,
  <strong>it will not exist here!</strong> If you haven't already, please create a new account.
</p>
<p class="text-sm">
  If you have any troubles resetting your password, please <%= link_to "Contact Support", contact_path, class: "underline" %>
</p>