<% content_for :styles do %>
  <%= stylesheet_link_tag "gallery/main" %>
<% end %>
<% content_for :body do %>
<div id="content" class="relative px-3 sm:px-0 sm:mx-16 ncs-min:mx-0 grow">
  <section id="filters">
    <details open id="filter-list" class="group">
      <summary class="bg-ncs-dark-700 text-ncs-dark-100 text-lg font-bold px-2 rounded group-open:rounded-b-none cursor-pointer select-none py-0.5">
        Filters
      </summary>
      <%= yield :filters %>
    </details>
  </section>

  <section id="gallery" class="flex flex-col">
    <%= yield :before_gallery %>

    <%= render partial: "shared/gallery_tabs", locals: { selected: @gallery_tab } %>

    <div class="flex flex-col bg-ncs-dark-800 p-2 rounded-tr-sm grow">
      <%= yield %>
    </div>
  </section>
</div>

<script>
  if (matchMedia("(max-width: 1600px)").matches) {
    document.getElementById("filter-list").open = false
  }
</script>
<% end %>

<%= render template: "layouts/base"%>