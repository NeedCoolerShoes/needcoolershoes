<!DOCTYPE html>
<html lang="en">
  <head>
    <%= render partial: "shared/meta" %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= content_for?(:styles) ? yield(:styles) : nil %>
    <%= javascript_importmap_tags %>
    <%= content_for?(:scripts) ? yield(:scripts) : nil %>
    <%= render partial: "shared/favicons" %>
    <%= render partial: "shared/preloads" %>
    <%= render partial: "shared/analytics" %>
  </head>

  <body class="flex flex-col min-h-screen">
    <%= render partial: "shared/flash" %>
    <%= yield :attention if content_for?(:attention) %>
    <% if Time.current.month == 6 %>
      <div id="pride" class="w-full h-[1px]"></div>
    <% end %>
    <div class="sm:mx-16">
      <%= render partial: "shared/header" %>
    </div>
    <main class="flex flex-col items-center justify-start grow mx-3 sm:mx-16">
      <div class="flex flex-col max-w-ncs-content w-full">
        <% if content_for?(:message) %>
          <%= yield :message %>
        <% else %>
          <div class="h-3.5">
          </div>
        <% end %>
        
        <%= yield %>
      </div>
    </main>
    <%= render partial: "shared/footer" %>
  </body>
</html>
