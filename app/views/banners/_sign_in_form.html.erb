<h2 class="text-xl text-white">Sign In to Share to Gallery</h2>
<%= form_with(url: user_session_path, model: User) do |f| %>
  <div class="flex flex-col gap-2 w-full text-white">
    <div class="flex flex-col">
      <%= f.label :login %>
      <%= f.email_field :login, autofocus: true, autocomplete: "email", class: "text-black" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", class: "text-black" %>
    </div>

    <div class="flex justify-between">
      <%= f.label :remember_me, style: "flex-grow: 1; margin: 0px;" %>
      <%= f.check_box :remember_me, class: "!w-4 !h-4" %>
    </div>

    <div>
      <p>Don't have an account? <%= link_to "Sign up.", new_user_registration_path, class: "underline" %></p>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Log in", class: "btn-ncs" %>
      <button id="share-cancel" class="btn-ncs" type="button">Cancel</button>
    </div>
  </div>
<% end %>