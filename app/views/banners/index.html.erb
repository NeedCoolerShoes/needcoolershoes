<% content_for :filters do %>
  <%= render partial: "banners/index/banner_filters", locals: {params: @gallery_params, banners: @banners} %>
<% end %>
<% content_for :styles do %>
  <%= stylesheet_link_tag "banner/components" %>
<% end %>
<% content_for :scripts do %>
  <script type="module" src="/ncsassets/js/banner/components/banner.js"></script>
<% end %>

<%= render partial: "shared/pagy_nav", locals: { pagy: @pagy } %>
<div class="grow">
    <% if !@banners.any? %>
      <div class="flex flex-col gap-2 items-center">
        <h3 class="text-4xl font-bold text-white">NO BANNERS?</h3>
        <img src="/ncsassets/img/megamewnd.png" width="350" height="465.45" alt="Mascot">
      </div>
    <% end %>
  <div class="grid grid-cols-1 xs:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <%= render partial: "banners/index/banner_index", collection: @banners, as: :banner, locals: { params: @gallery_params } %>
  </div>
</div>
<%= render partial: "shared/pagy_nav", locals: { pagy: @pagy } %>