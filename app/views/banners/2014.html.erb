          <div>Saved Banners</div>
          <div
            class="header-button bchestex"
            onmousedown="exportChest(0)"
          >
            Export to chest
          </div>
          <div class="header-button bchestex" onmousedown="clearSaved()">
            Delete all
          </div>
        </div>
