          <input type="text" id="url" onclick="this.select()" />
        </div>

        <div class="header"><div>Generate Code</div></div>
        <div class="generate">
          <div class="button" onclick="jsonOutput(0)">/give</div>
          <div class="button" onclick="jsonOutput(1)">/setblock</div>
          <div class="button" onclick="jsonOutput(2)">/replaceitem</div>
