<%
  selected ||= :skins
  tabs = [
    [:skins, "Skins", skins_gallery_path],
    [:banners, "Banners", banners_gallery_path],
  ]
%>

<ul class="flex items-end gap-1 text-lg mt-2 ncs-min:mt-3 font-bold">
  <% tabs.each do |tab| %>
    <%
      classes = (selected == tab[0] ? "bg-ncs-dark-800 text-ncs-dark-100 sm:py-1" : "bg-ncs-dark-700 text-ncs-dark-300 sm:py-0.5" )
    %>
    <li class="rounded-t-lg <%= classes %>"><%= link_to tab[1], tab[2], class: "px-4 sm:px-6" %></li>
  <% end %>
</ul>